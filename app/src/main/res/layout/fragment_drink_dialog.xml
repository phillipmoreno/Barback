<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    tools:context=".DrinkDialog">

    <TextView
        android:id="@+id/drink_dialog_name"
        style="@style/TextHighlight"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/drink_dialog_image"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/drink_dialog_name"
        android:adjustViewBounds="true"
        android:background="@drawable/frame_border"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="2dp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:id="@+id/linearAbv"
        android:layout_below="@+id/drink_dialog_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:background="@drawable/category_border"
            style="@style/TextHighlight"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/abv"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

        <TextView
            android:id="@+id/drink_dialog_abv"
            style="@style/TextHighlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/details_border"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingEnd="10dp"
            android:textAlignment="textEnd"
            android:textColor="#000"
            android:textSize="18sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearCalories"
        android:layout_below="@id/linearAbv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:background="@drawable/category_border"
            style="@style/TextHighlight"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/calories"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="10dp" />

        <TextView
            android:id="@+id/drink_dialog_calories"
            style="@style/TextHighlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/details_border"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingRight="10dp"
            android:textAlignment="textEnd"
            android:textColor="#000"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearTaste"
        android:layout_below="@+id/linearCalories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:background="@drawable/category_border"
            style="@style/TextHighlight"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/taste"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/drink_dialog_taste"
            style="@style/TextHighlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/details_border"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingRight="10dp"
            android:textAlignment="textEnd"
            android:textColor="#000"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearPrice"
        android:layout_below="@id/linearTaste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:background="@drawable/category_border"
            style="@style/TextHighlight"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/price"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/drink_dialog_price"
            style="@style/TextHighlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/details_border"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingRight="10dp"
            android:textAlignment="textEnd"
            android:textColor="#000"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearQuantity"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linearPrice"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/quantity_subtract_button"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#ee3645"
            android:gravity="center"
            android:text="-"
            android:textColor="@android:color/white"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/quantity_number_tv"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#ee3645"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/quantity_add_button"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#ee3645"
            android:gravity="center"
            android:text="+"
            android:textColor="@android:color/white"
            android:textSize="26sp" />

    </LinearLayout>

    <Button
        android:id="@+id/drink_dialog_add_to_cart_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linearQuantity"
        android:drawableStart="@drawable/ic_shopping_cart"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/add_to_cart_button_border"
        android:elevation="20sp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="@string/add_to_cart"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"/>
</RelativeLayout>